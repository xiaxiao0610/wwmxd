<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/top_layout">

        <Button
            android:id="@+id/home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignRight="@+id/top_text"
            android:layout_marginRight="180dp"
            android:background="@drawable/home"
            android:onClick="backGame"/>
        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="关卡选择"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_toRightOf="@id/top_text"
            android:layout_marginLeft="110dp"
            android:background="@drawable/music"
            android:onClick="musicService"/>

        <ImageView
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/home"
            android:layout_marginTop="6dp"
            android:background="@drawable/line"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:id="@+id/bottom_layout">

        <ImageView
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line"/>
        <TextView
            android:id="@+id/wwmxd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_line"
            android:layout_marginTop="8dp"
            android:text="万万没想到"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:layout_above="@id/bottom_layout"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:background="#F5F5F5"
            android:text="3"
            android:onClick="gameThree"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toLeftOf="@id/btn_3"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5"
            android:text="2"
            android:onClick="gameTwo" />
        <Button
            android:id="@+id/btn_1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toLeftOf="@id/btn_2"
            android:layout_marginRight="23dp"
            android:background="#F5F5F5"
            android:text="1"
            android:onClick="gameOne"/>
        <Button
            android:id="@+id/btn_4"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/btn_3"
            android:layout_marginLeft="23dp"
            android:background="#F5F5F5"
            android:text="4"
            android:onClick="gameFour"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/btn_4"
            android:layout_marginLeft="23dp"
            android:background="#F5F5F5"
            android:text="5"
            android:onClick="gameFive"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_3"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:text="8"
            android:onClick="gameEight"/>
        <Button
            android:id="@+id/btn_7"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toLeftOf="@id/btn_8"
            android:layout_marginRight="23dp"
            android:layout_below="@id/btn_2"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:text="7"
            android:onClick="gameSeven"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toLeftOf="@id/btn_7"
            android:layout_marginRight="23dp"
            android:layout_below="@id/btn_1"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:text="6"
            android:onClick="gameSix"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/btn_8"
            android:layout_marginLeft="23dp"
            android:layout_below="@id/btn_4"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:text="9"
            android:onClick="gameNine"/>
        <Button
            android:id="@+id/btn_10"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/btn_9"
            android:layout_marginLeft="23dp"
            android:layout_below="@id/btn_5"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:text="10" />


    </RelativeLayout>

</RelativeLayout>
